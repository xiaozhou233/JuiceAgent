{
    "version": 3,
    "configurePresets": [
      {
        "name": "ninja-release",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release",
          "RELEASE_BUILD": "ON"
        }
      },
      {
        "name": "ninja-debug",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug"
        }
      }
    ]
  }
  